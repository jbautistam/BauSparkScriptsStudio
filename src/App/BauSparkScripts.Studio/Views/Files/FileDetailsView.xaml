<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bau.SparkScripts.Studio.Views.Files"
			 xmlns:CodeEditor="clr-namespace:Bau.Controls.CodeEditor;assembly=CodeEditor"
			 x:Class="Bau.SparkScripts.Studio.Views.Files.FileDetailsView"
             mc:Ignorable="d" Loaded="UserControl_Loaded"
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<CodeEditor:ctlEditor Grid.Row="0" Grid.Column="0" Margin="2"
			x:Name="udtEditor" TextChanged="udtEditor_TextChanged" BorderThickness="1" BorderBrush="Black"/>
	</Grid>
</UserControl>
