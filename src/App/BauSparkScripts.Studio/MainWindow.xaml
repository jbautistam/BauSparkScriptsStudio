		<!-- Barra de estado -->
		<StatusBar Grid.Row="3" Grid.Column="0">
			<StatusBarItem>
				<TextBlock Text="{Binding Path=StatusMessage}"/>
			</StatusBarItem>
			<StatusBarItem HorizontalAlignment="Right">
				<StackPanel Orientation="Horizontal">
					<!--
